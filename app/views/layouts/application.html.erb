    .clear {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 15px;
      height: 15px;
      right: 15px;
      background: white;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      margin-right: -6px;
    }

    .clear::before {
      position: absolute;
      content: '';
      width: 1px;
      height: 15px;
      background: black;
      transform: rotate(45deg);
    }

    .clear::after {
      position: absolute;
      content: '';
      width: 1px;
      height: 15px;
      background: black;
      transform: rotate(315deg);
    }
  
</style>


