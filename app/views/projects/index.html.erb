<div class="container relative p-6 mx-auto text-gray-900 bg-white rounded-lg lg:p-10">
    <div id="project-wrap" class="flex flex-wrap items-start justify-center">
      <% if @projects.blank? %>
        <div>
          <h1 class="text text-red-500 text-xl">No search results for "<%="#{@query}" %>"</h1>
        </div>
      <%else%>
        <% @projects.each do |project| %>
          <%= render 'project', project: project%>
        <% end %>
      <%end%>
    </div>
</div>

<div id="pagination-wrap" class="container relative p-6 text-white-900 rounded-lg lg:p-10 flex flex-wrap justify-center">
    <%#= paginate @projects, remote: true %>
    <%= paginate @projects %>
</div>