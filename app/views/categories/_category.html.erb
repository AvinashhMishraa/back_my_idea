<% if current_user && current_user.admin?%>

<div class="category-link mt-5 border-2 border-blue-700 rounded-lg flex space-x-1 btn">

	

    <ul>
    	<li> 
    		<span id="category-name">
    		<%= link_to category do %>
    		    <%= category.name %>
    		<% end %>
    	    </span>
    		<span id="category-remove">
    		<span class="close"><%= link_to 'X', category, method: :delete, data: { confirm: 'Are you sure to remove this category?' }, class:"cat-remove" %></span>
    	</li>
    </ul>

</div>

<%else%>

    <%= link_to category do %>
        <%#= link_to 'x', category, method: :delete, data: { confirm: 'Are you sure?' }, class:"sdfg" %>
    	<div class="bg-blue-700 text-white font-bold border border-blue-700 rounded btn w-auto"> <%= category.name %> </div>
    	<%#= link_to 'X', category, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>

<%end%>




<style type="text/css">
		#category-name:hover {
		  /*background-color: #22D3EE;*/
		  background-color: #1DA1F2;
		  color: white;
		}

		#category-name{
			height: 5px;
			width: 3px;
		}

		.cat-remove {
			color: red;
		}

		#category-remove:hover{
			background-color: rgba(251, 191, 36, var(--tw-bg-opacity));
			color: #D84141;
		}
		
</style>




