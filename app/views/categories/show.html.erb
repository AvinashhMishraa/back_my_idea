<div class="bg-blue-800 border-4 border-blue-700 rounded-lg px-20 pt-6 pb-8 edit-category">

  <div class="category-header text-center text-white -mt-4">
    <h1 class="header text-2xl text-blue"> Category </h1>
  </div>
  
  <p class="category-name -ml-10">
    <strong>Name:</strong>
    <%= @category.name %>
  </p>
  <%= link_to 'Edit', edit_category_path(@category), class: 'btn btn-default mt-0 edit' %>
  <%#= link_to 'Back', categories_path %>
</div>

<div class="flex flex-col -space-y-6">

<div class="container relative p-6 mx-auto text-gray-900 bg-white rounded-lg lg:p-10 mt-4">
  <div id="project-wrap" class="flex flex-wrap items-start justify-center">

      <%= render @projects_related_to_the_category %>
      <%#= render @category.projects.page(params[:page]) %>
  </div>
</div>

<div id="pagination-wrap" class="container relative p-6 text-white-900 rounded-lg lg:p-10 flex flex-wrap justify-center">
  <%= paginate @projects_related_to_the_category %>
  <%#= paginate @category.projects.page(params[:page]) %>
</div>

</div>

